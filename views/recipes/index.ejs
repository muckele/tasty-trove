<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/index.css">
<%- include('../partials/nav') %>

<section>
  <h1 class="section-heading">Recipe List</h1>
  <table id="list">
    <thead>
      <tr>
        <th>Recipe Name</th>
        <th>Total Time</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% recipes.forEach((recipe)=> { %>
        <tr>
          <td>
            <%= recipe.name %>
          </td>
        <td>
          <%= recipe.totalTime %>
          </td>
          <td><a href="/recipes/<%= recipe._id %>">View Recipe</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
<%- include('../partials/footer') %>

